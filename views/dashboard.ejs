<div class="max-w-6xl mx-auto py-8 px-4">
  <!-- Flash messages -->
  <% if(success && success.length > 0){ %>
    <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4">
      <%= success %>
    </div>
  <% } %>
  <% if(error && error.length > 0){ %>
    <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4">
      <%= error %>
    </div>
  <% } %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Dashboard</h1>
    <a href="/blogs/blog/create" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Create Blog</a>
  </div>

  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-2xl font-semibold mb-4">Your Blogs</h2>

    <% if(userBlogs.length === 0){ %>
      <p class="text-gray-500">You havenâ€™t created any blogs yet.</p>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% userBlogs.forEach(blog => { %>
          <div class="border rounded-lg p-4 flex flex-col">
            <% if(blog.image){ %>
              <img src="<%= blog.image %>" alt="Blog Image" class="rounded mb-3 h-48 w-full object-cover">
            <% } %>
            <h3 class="text-xl font-semibold mb-2">
              <a href="/blogs/<%= blog._id %>" class="hover:text-indigo-600 hover:underline"><%= blog.title %></a>
            </h3>
            <p class="text-gray-600 flex-grow"><%= blog.content.substring(0, 100) %>...</p>
            <div class="mt-3 flex justify-between">
              <a href="/blogs/edit/<%= blog._id %>" class="text-indigo-600 hover:underline">Edit</a>
              <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="inline">
                <button class="text-red-500 hover:underline">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <% if(user.isAdmin){ %>
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-2xl font-semibold mb-4">All Blogs (Admin)</h2>

      <% if(allBlogs.length === 0){ %>
        <p class="text-gray-500">No blogs found.</p>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% allBlogs.forEach(blog => { %>
            <div class="border rounded-lg p-4 flex flex-col">
              <% if(blog.image){ %>
                <img src="<%= blog.image %>" alt="Blog Image" class="rounded mb-3 h-48 w-full object-cover">
              <% } %>
              <h3 class="text-xl font-semibold mb-2">
                <a href="/blogs/<%= blog._id %>" class="hover:text-indigo-600 hover:underline"><%= blog.title %></a>
              </h3>
              <p class="text-gray-600 flex-grow"><%= blog.content.substring(0, 100) %>...</p>
              <div class="mt-3 flex justify-end">
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="inline">
                  <button class="text-red-500 hover:underline">Hard Delete</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  <% } %>
</div>
