<h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>

<% if (success && success.length > 0) { %>
  <div class="bg-green-100 text-green-800 p-3 rounded mb-4"><%= success %></div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="bg-red-100 text-red-800 p-3 rounded mb-4"><%= error %></div>
<% } %>
dsdsd
<h2 class="text-2xl font-semibold mb-2">All Users</h2>
<table class="w-full mb-6 border">
  <thead class="bg-gray-100">
    <tr>
      <th class="p-2 border">Username</th>
      <th class="p-2 border">Email</th>
      <th class="p-2 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td class="p-2 border"><%= u.username %></td>
        <td class="p-2 border"><%= u.email %></td>
        <td class="p-2 border">
          <form action="/admin/users/<%= u._id %>?_method=DELETE" method="POST" class="inline">
            <button class="text-red-500 hover:underline">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h2 class="text-2xl font-semibold mb-2">All Blogs</h2>
<table class="w-full border">
  <thead class="bg-gray-100">
    <tr>
      <th class="p-2 border">Title</th>
      <th class="p-2 border">Author</th>
      <th class="p-2 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% blogs.forEach(b => { %>
      <tr>
        <td class="p-2 border"><%= b.title %></td>
        <td class="p-2 border"><%= b.author.username %></td>
        <td class="p-2 border">
          <form action="/admin/blogs/<%= b._id %>?_method=DELETE" method="POST" class="inline">
            <button class="text-red-500 hover:underline">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
