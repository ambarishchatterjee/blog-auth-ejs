<div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4 text-center">Edit Blog</h2>
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-4">
    <input type="text" name="title" value="<%= blog.title %>" class="w-full px-3 py-2 border rounded" required>
    <textarea name="content" rows="6" class="w-full px-3 py-2 border rounded" required><%= blog.content %></textarea>
    <% if(blog.image){ %>
      <p class="text-gray-500 mb-2">Current image:</p>
      <img src="<%= blog.image %>" class="mb-3 h-48 w-full object-cover rounded">
    <% } %>
    <input type="file" name="image" accept="image/*" class="w-full px-3 py-2 border rounded">
    <button class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700">Update</button>
  </form>
</div>
